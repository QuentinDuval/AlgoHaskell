name: AlgoHaskell
version: 0.0.1
cabal-version: 1.12
build-type: Simple
license: AllRightsReserved

library
    exposed-modules:
        Queue.Class
        Queue.Persistent
        Queue.Transient
        Queue.Utils
        RMQ.RangeQuery
        Utils.Monoids
    build-depends:
        HUnit -any,
        QuickCheck -any,
        base -any,
        criterion -any
    default-language: Haskell2010
    hs-source-dirs: src
    other-modules:
        Puzzles.Fibonacci
    ghc-options: -ferror-spans -O2

executable exe-AlgoHaskell
    main-is: Main.hs
    build-depends:
        AlgoHaskell -any,
        base -any,
        criterion -any
    default-language: Haskell2010
    hs-source-dirs: src test
    other-modules:
        Benchs
        Bench.Queue
    ghc-options: -ferror-spans -O2

test-suite test-AlgoHaskell
    type: exitcode-stdio-1.0
    main-is: TestMain.hs
    build-depends:
        HUnit -any,
        QuickCheck -any,
        base -any,
        criterion -any
    default-language: Haskell2010
    hs-source-dirs: src test
    other-modules:
        Test.Puzzles.FibTest
        Test.RMQ
        TestSuite
        Test.Queue
    ghc-options: -ferror-spans
